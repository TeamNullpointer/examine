<?xml version="1.0" encoding="UTF-8" ?>
<web-app>

  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>jp.ac.asojuku.ems.filter.EncodingFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>



<servlet>
	<servlet-name>LoginStartAction</servlet-name>
	<servlet-class>jp.ac.asojuku.ems.action.LoginStartAction</servlet-class>
</servlet>


<servlet-mapping>
	<servlet-name>LoginStartAction</servlet-name>
	<url-pattern>/login</url-pattern>
</servlet-mapping>

</web-app>